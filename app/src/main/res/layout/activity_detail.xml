<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@drawable/detail_pay_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/btn_back"
                android:text="@string/btn_hello"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Details Movie"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/film1_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:src="@drawable/detail_1"/>

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/titleMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="DEADPOOL"
        android:fontFamily="@font/poppins_regular"
        android:background="@color/deep_blue"
        android:textColor="@color/black"
        android:layout_marginLeft="45dp"
        android:textSize="25sp"/>
    <LinearLayout
        android:id="@+id/dir_btg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/direc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Director: Tim Miller"
                android:textColor="@color/white"
                android:layout_marginLeft="45dp"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btg"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:text="4,2"
                android:textStyle="bold"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/genre_action"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="45dp"
                android:src="@drawable/genre_action" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/genre_drama"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/genre_drama" />

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/storyline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/genre_drama"
            android:text="StoryLine"
            android:textStyle="bold"
            android:background="@color/deep_blue"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="150dp"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/isi_storyline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In the bustling city of Zootopia, where mammals of all kinds live together, Judy Hopps, a determined and optimistic young rabbit, fulfills her lifelong dream of becoming the first bunny police officer. While she's excited to start her new job, she quickly realizes that it's not as easy as she thought."
            android:layout_marginLeft="45dp"
            android:background="@color/white"
            android:layout_marginRight="45dp"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:layout_marginTop="2dp"
            />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnget"
            android:layout_width="285dp"
            android:layout_height="43dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/deep_blue"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="11dp"
            android:text="Get Ticket"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
</ScrollView>

</LinearLayout>
